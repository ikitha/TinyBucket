<div class="container main" style="margin-top:50px">
	<ol class="breadcrumb">
	  <li>Discover</li>
	</ol>

<div class="middle">
	<h1>Discover and Share</h1>
	<hr />
	<h4 class="search-tasks-message">Search tasks here to see how others responded to completing them!</h4>
  <div class="centering">
    <a class="btn btn-default btn-lg centering" href="/discover">Go Back to Search</a>
  </div>
</div>

<% for (var i=0; i < taskresults.length; i++) { %> <!-- shows all results for selected task as long as posts are public -->
  <div class="blogs">
  	<h2 class="task">Task: <small><%= taskresults[i].dataValues.Task.values.title %></small><span class="glyphicon glyphicon-user pull-left"></span></h2>
  	<hr />
  	<blockquote class="blog-posts">
    		<p><%= taskresults[i].dataValues.post %></p>
    		<footer><%= taskresults[i].dataValues.updatedAt.toDateString() %></footer> <!-- only showing part of date -->
  	</blockquote>
  </div>
<% } %>

</div>

</div>