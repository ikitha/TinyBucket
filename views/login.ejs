<% layout ('layout') %>

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <% if(!isAuthenticated) { %> <!-- if user is not logged in -->
        <a class="navbar-brand active" href="/new">
      <% } %>
      <% if(isAuthenticated) { %> <!-- if user is signed in -->
        <a class="navbar-brand active" href="/home">
      <% } %>
      <img src="/images/A Tiny Bucket.png">TinyBucket</a>
  	</div>
  <div class="collapse navbar-collapse navbar-right" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/about">About</a></li>
        <li><a href="/discover">Discover</a></li>
      </ul>
  </div>
</nav>

<div class="container main" style="margin-top:50px">
	<div class="container welcome">
		<h1>Welcome to TinyBucket!</h1>
		<hr />
	</div>

	<!-- Display any login errors -->

	<% if (messages.length > 0) { %>
	    <div class="alert alert-danger margin-top-20 signup-errors" role="alert">
	        <p><%= messages[0] %></p>
	    </div>
	<% } %>

	<form class="signup log" role="form" method="post" action="/login">
	  <div class="form-group">
	  <div class="form-group">
	    <label for="username">Username</label>
	    <input type="username" class="form-control" name="username" placeholder="Username">
	  </div>
	  <div class="form-group">
	    <label for="password">Password</label>
	    <input type="password" class="form-control" name="password" placeholder="Password">
	  </div>
	  <button type="submit" class="btn btn-lg btn-primary login">Log In</button>
	  <div class="margin-top-20"><a href="/new" class="margin-top-20">Don't have an account? Sign up!</a></div>
	</form>

</div>